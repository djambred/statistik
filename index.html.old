<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AR Statistics Visualization</title>
    <link rel="stylesheet" href="style.css">
    <!-- Lucide Icons CDN -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
    <div class="container">
        <header>
            <h1>üìä AR Statistics Visualization</h1>
            <p>Visualisasikan data statistik Anda dalam Augmented Reality 3D</p>
        </header>

        <main>
            <!-- Chart Type Selection -->
            <section class="chart-type-section">
                <h2>Pilih Jenis Chart</h2>
                <div class="chart-types">
                    <button class="chart-type-btn active" data-type="bar">
                        <i data-lucide="bar-chart-3" class="icon"></i>
                        <span>Bar Chart</span>
                    </button>
                    <button class="chart-type-btn" data-type="pie">
                        <i data-lucide="pie-chart" class="icon"></i>
                        <span>Pie Chart</span>
                    </button>
                    <button class="chart-type-btn" data-type="histogram">
                        <i data-lucide="bar-chart-4" class="icon"></i>
                        <span>Histogram</span>
                    </button>
                </div>
            </section>

            <!-- Data Input Section -->
            <section class="data-input-section">
                <h2>Input Data</h2>
                
                <div class="input-method">
                    <button class="method-btn active" data-method="manual">Manual Input</button>
                    <button class="method-btn" data-method="sample">Use Sample Data</button>
                </div>

                <!-- Manual Input -->
                <div id="manual-input" class="input-form">
                    <div class="form-group">
                        <label>Labels (pisahkan dengan koma):</label>
                        <input type="text" id="labels-input" placeholder="Q1, Q2, Q3, Q4">
                    </div>

                    <div class="form-group">
                        <label>Values (pisahkan dengan koma):</label>
                        <input type="text" id="values-input" placeholder="45, 67, 82, 91">
                    </div>

                    <div class="form-group">
                        <label>Chart Title:</label>
                        <input type="text" id="title-input" placeholder="Sales Data 2024">
                    </div>
                </div>

                <!-- Sample Data (Hidden by default) -->
                <div id="sample-input" class="input-form" style="display: none;">
                    <select id="sample-select">
                        <option value="sales">Sales Data</option>
                        <option value="survey">Survey Results</option>
                        <option value="grades">Student Grades</option>
                    </select>
                </div>

                <!-- Data Preview -->
                <div class="data-preview">
                    <h3>Preview Data:</h3>
                    <div id="preview-content">
                        <p class="placeholder">Data akan muncul di sini...</p>
                    </div>
                </div>
            </section>

            <!-- Launch AR Button -->
            <div class="action-section">
                <button id="launch-ar-btn" class="launch-btn">
                    <span>üöÄ Launch AR View</span>
                </button>
            </div>

            <!-- Debug Button (untuk testing) -->
            <div class="action-section" style="margin-top: 10px;">
                <button id="debug-btn" class="control-btn" style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.3); padding: 10px 20px; border-radius: 8px; color: white; cursor: pointer;">
                    üîç Debug - Check Data
                </button>
            </div>

            <!-- Info Section -->
            <section class="info-section">
                <h3>‚ÑπÔ∏è Cara Menggunakan:</h3>
                <ol>
                    <li>Pilih jenis chart yang diinginkan</li>
                    <li>Input data atau pilih sample data</li>
                    <li>Klik "Launch AR View"</li>
                    <li>Izinkan akses kamera</li>
                    <li>Arahkan kamera ke permukaan datar</li>
                    <li>Tap untuk menempatkan chart</li>
                </ol>
            </section>
        </main>

        <footer>
            <p>üí° Butuh browser dengan WebXR support (Chrome di Android / Safari di iOS)</p>
        </footer>
    </div>

    <script src="app.js"></script>
    <script>
        // Initialize Lucide icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
            console.log('‚úÖ Lucide icons initialized');
        }
        
        // Debug: Check if elements loaded
        console.log('=== PAGE LOADED ===');
        console.log('Launch button:', document.getElementById('launch-ar-btn'));
        console.log('Sample select:', document.getElementById('sample-select'));
        console.log('Debug button:', document.getElementById('debug-btn'));
        
        // Debug button handler
        document.getElementById('debug-btn')?.addEventListener('click', () => {
            console.log('=== DEBUG INFO ===');
            console.log('Chart Type:', appState.chartType);
            console.log('Input Method:', appState.inputMethod);
            console.log('Labels:', appState.data.labels);
            console.log('Values:', appState.data.values);
            console.log('Colors:', appState.data.colors);
            console.log('Title:', appState.data.title);
            
            // Test localStorage
            if (appState.data.labels.length > 0 && appState.data.values.length > 0) {
                const testData = {
                    type: appState.chartType,
                    data: appState.data
                };
                localStorage.setItem('arChartData', JSON.stringify(testData));
                const retrieved = localStorage.getItem('arChartData');
                console.log('LocalStorage test SUCCESS:', retrieved);
                alert('‚úÖ Data valid! Check console for details.\n\nChart Type: ' + appState.chartType + '\nLabels: ' + appState.data.labels.length + '\nValues: ' + appState.data.values.length);
            } else {
                console.error('‚ùå Data invalid or empty');
                alert('‚ö†Ô∏è Data belum diinput atau tidak valid!\n\nLabels: ' + appState.data.labels.length + '\nValues: ' + appState.data.values.length);
            }
        });
        
        // Check localStorage capability
        try {
            localStorage.setItem('test', 'ok');
            const test = localStorage.getItem('test');
            localStorage.removeItem('test');
            console.log('‚úÖ localStorage working:', test === 'ok');
        } catch (e) {
            console.error('‚ùå localStorage NOT working:', e);
            alert('‚ö†Ô∏è Browser tidak mendukung localStorage. Gunakan browser lain atau disable privacy mode.');
        }
    </script>
</body>
</html>