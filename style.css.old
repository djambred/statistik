/* ==================== Global Styles ==================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #4A90E2;
    --secondary-color: #E94B3C;
    --success-color: #6BCF7F;
    --warning-color: #F5A623;
    --danger-color: #E94B3C;
    --dark-bg: #1a1a2e;
    --card-bg: #16213e;
    --text-light: #ffffff;
    --text-gray: #b8b8b8;
    --border-radius: 12px;
    --transition: all 0.3s ease;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    color: var(--text-light);
    min-height: 100vh;
    line-height: 1.6;
}

/* ==================== Container ==================== */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

/* ==================== Header ==================== */
header {
    text-align: center;
    padding: 40px 20px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
}

header h1 {
    font-size: 2.5rem;
    margin-bottom: 10px;
    background: linear-gradient(45deg, var(--primary-color), var(--warning-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

header p {
    color: var(--text-gray);
    font-size: 1.1rem;
}

/* ==================== Chart Type Selection ==================== */
.chart-type-section {
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: var(--border-radius);
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
}

.chart-type-section h2 {
    margin-bottom: 20px;
    color: var(--text-light);
}

.chart-types {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
}

.chart-type-btn {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid transparent;
    border-radius: var(--border-radius);
    padding: 20px;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    color: var(--text-light);
    font-size: 1rem;
}

.chart-type-btn .icon {
    width: 48px;
    height: 48px;
    stroke-width: 1.5;
}

.chart-type-btn:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-5px);
}

.chart-type-btn.active {
    border-color: var(--primary-color);
    background: rgba(74, 144, 226, 0.2);
}

/* ==================== Data Input Section ==================== */
.data-input-section {
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: var(--border-radius);
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
}

.data-input-section h2 {
    margin-bottom: 20px;
}

.input-method {
    display: flex;
    gap: 10px;
    margin-bottom: 25px;
}

.method-btn {
    flex: 1;
    padding: 12px 20px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid transparent;
    border-radius: var(--border-radius);
    color: var(--text-light);
    cursor: pointer;
    transition: var(--transition);
    font-size: 1rem;
}

.method-btn:hover {
    background: rgba(255, 255, 255, 0.15);
}

.method-btn.active {
    border-color: var(--primary-color);
    background: rgba(74, 144, 226, 0.2);
}

/* ==================== Form Styles ==================== */
.input-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-group label {
    color: var(--text-gray);
    font-size: 0.95rem;
    font-weight: 500;
}

.form-group input,
.form-group select {
    padding: 12px 15px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--text-light);
    font-size: 1rem;
    transition: var(--transition);
}

.form-group input:focus,
.form-group select:focus {
    outline: none;
    border-color: var(--primary-color);
    background: rgba(255, 255, 255, 0.15);
}

.form-group input::placeholder {
    color: rgba(255, 255, 255, 0.4);
}

select option {
    background: var(--card-bg);
    color: var(--text-light);
}

/* ==================== Data Preview ==================== */
.data-preview {
    margin-top: 25px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
}

.data-preview h3 {
    margin-bottom: 15px;
    font-size: 1.1rem;
}

#preview-content {
    color: var(--text-gray);
}

#preview-content .placeholder {
    font-style: italic;
    opacity: 0.6;
}

#preview-content table {
    width: 100%;
    border-collapse: collapse;
}

#preview-content th,
#preview-content td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

#preview-content th {
    color: var(--primary-color);
    font-weight: 600;
}

/* ==================== Action Section ==================== */
.action-section {
    margin: 30px 0;
    text-align: center;
}

.launch-btn {
    background: linear-gradient(45deg, var(--primary-color), var(--warning-color));
    border: none;
    border-radius: var(--border-radius);
    padding: 18px 40px;
    font-size: 1.2rem;
    font-weight: 600;
    color: white;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(74, 144, 226, 0.4);
}

.launch-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(74, 144, 226, 0.6);
}

.launch-btn:active {
    transform: translateY(-1px);
}

.launch-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
}

/* ==================== Info Section ==================== */
.info-section {
    background: rgba(255, 255, 255, 0.05);
    padding: 25px;
    border-radius: var(--border-radius);
    margin-bottom: 30px;
}

.info-section h3 {
    margin-bottom: 15px;
}

.info-section ol {
    margin-left: 25px;
    color: var(--text-gray);
}

.info-section li {
    margin-bottom: 8px;
}

/* ==================== Footer ==================== */
footer {
    text-align: center;
    padding: 20px;
    color: var(--text-gray);
    font-size: 0.9rem;
}

/* ==================== AR Body Styles ==================== */
.ar-body {
    margin: 0;
    padding: 0;
    overflow: hidden;
    background: #000;
}

.ar-body a-scene {
    height: 100vh;
    width: 100vw;
}

/* ==================== AR Overlay Controls ==================== */
#ar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1000;
}

#ar-overlay > * {
    pointer-events: auto;
}

.top-controls {
    position: absolute;
    top: 20px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

#status-text {
    background: rgba(0, 0, 0, 0.7);
    padding: 10px 20px;
    border-radius: 25px;
    color: white;
    font-size: 0.9rem;
    backdrop-filter: blur(10px);
}

.bottom-controls {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
}

.side-controls {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 10px;
}

/* ==================== Control Buttons ==================== */
.control-btn {
    background: rgba(0, 0, 0, 0.7);
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    padding: 12px 24px;
    color: white;
    font-size: 1rem;
    cursor: pointer;
    transition: var(--transition);
    backdrop-filter: blur(10px);
    font-weight: 500;
}

.control-btn:hover {
    background: rgba(0, 0, 0, 0.85);
    border-color: rgba(255, 255, 255, 0.5);
    transform: scale(1.05);
}

.control-btn:active {
    transform: scale(0.95);
}

.control-btn.primary {
    background: linear-gradient(45deg, var(--primary-color), var(--warning-color));
    border-color: transparent;
    font-size: 1.1rem;
    padding: 15px 30px;
    box-shadow: 0 4px 15px rgba(74, 144, 226, 0.4);
}

.control-btn.primary:hover {
    box-shadow: 0 6px 20px rgba(74, 144, 226, 0.6);
}

.control-btn.danger {
    background: rgba(233, 75, 60, 0.8);
    border-color: var(--danger-color);
}

.control-btn.danger:hover {
    background: rgba(233, 75, 60, 1);
}

.control-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
}

.control-btn:disabled:hover {
    transform: none;
}

/* ==================== Info Panel ==================== */
#info-panel {
    position: absolute;
    bottom: 120px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.85);
    padding: 20px 30px;
    border-radius: 12px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    max-width: 300px;
}

#info-panel h3 {
    color: var(--primary-color);
    margin-bottom: 8px;
    font-size: 1.1rem;
}

#info-panel p {
    color: white;
    font-size: 1.5rem;
    font-weight: 600;
}

/* ==================== Responsive Design ==================== */
@media (max-width: 768px) {
    header h1 {
        font-size: 1.8rem;
    }

    header p {
        font-size: 1rem;
    }

    .chart-types {
        grid-template-columns: 1fr;
    }

    .chart-type-btn {
        padding: 15px;
    }

    .input-method {
        flex-direction: column;
    }

    .launch-btn {
        width: 100%;
        padding: 15px 30px;
        font-size: 1.1rem;
    }

    .control-btn {
        padding: 10px 20px;
        font-size: 0.9rem;
    }

    .side-controls {
        right: 10px;
    }

    #info-panel {
        max-width: 80%;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 10px;
    }

    header {
        padding: 20px 15px;
    }

    .chart-type-section,
    .data-input-section,
    .info-section {
        padding: 20px;
    }

    .top-controls {
        padding: 0 10px;
    }

    #status-text {
        font-size: 0.8rem;
        padding: 8px 15px;
    }
}

/* ==================== Animations ==================== */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.container > * {
    animation: fadeIn 0.5s ease-out;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.5;
    }
}

.control-btn.primary:not(:disabled) {
    animation: pulse 2s infinite;
}

/* ==================== Loading State ==================== */
.loading {
    position: relative;
    pointer-events: none;
    opacity: 0.6;
}

.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 3px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}